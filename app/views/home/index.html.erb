<% if user_signed_in? %>

<h2>Welcome <%= current_user.first_name %>!</h2>

<% else %>

<h2> Welcome! Please sign in! </h2>

<% end %>
<div class='container'>
	<% @categories.in_groups_of(4, false).each do |group| %>
		<div class="row categoryRow">
		  <% group.each do |category| %>
			<%= link_to(category) do %>
			    <div class="box col-md-3">
					<%= category.name %>
				</div>
			<% end %>
		  <% end %>
		</div>
	<% end %>
</div>
