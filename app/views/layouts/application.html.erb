<!DOCTYPE html>
<html>
	<head>
	  <title>Proj2</title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= stylesheet_link_tag    'bootstrap.min', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<header class="nav-wrapper">
			<div class="logo md col-xs-4 col-sm-4 col-md-4"></div>
			<div class="mobile-menu"></div>
			<div class="nonmobile-menu col-sm-8 col-md-8">
				<ul class="main-menu">
					<% if user_signed_in? %>
						<li><%= link_to "Home", '/items' %></li>
						<li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></li>
					<% else %>
						<li><%= link_to "Home", '/items' %></li>
						<li><%= link_to "Sign In", new_user_session_path, :method => :get %></li>
						<li><%= link_to "Sign up", new_user_registration_path, :method => :get %></li>
					<% end %>
				</ul>
			</div>
		</header>

		<%= yield %>
	</body>
</html>
