<%= link_to "All", '/' %> > <%= @category.name %>

<div class='container'>
     <% Subcategory.where(category_id: @category).in_groups_of(6, false).each do |group| %>
          <div class="row subCategoryRow">
            <% group.each do |subcategory| %>
               <%= link_to(subcategory) do %>
                   <div class="box col-md-2">
                         <%= subcategory.name %>
                    </div>
               <% end %>
            <% end %>
          </div>
     <% end %>
</div>
